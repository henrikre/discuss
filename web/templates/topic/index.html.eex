<h1>Topics</h1>

<ul class="collection">
  <%= for topic <- @topics do %>
    <li class="collection-item">
      <%= link to: topic_path(@conn, :edit, topic) do %>
        <%= topic.title %>
      <% end %>
      <%= link "Delete", to: topic_path(@conn, :delete, topic.id), method: :delete %>
    </li>
  <% end %>
</ul>

<%= link to: topic_path(@conn, :new) do %>
  Create new topic
<% end %>